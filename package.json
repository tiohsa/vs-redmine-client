{
  "name": "todoex",
  "displayName": "TodoEx",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:todoexActivityProjects",
    "onView:todoexActivityTickets",
    "onView:todoexActivityComments",
    "onCommand:todoex.refreshTickets",
    "onCommand:todoex.refreshProjects",
    "onCommand:todoex.selectProject",
    "onCommand:todoex.toggleChildProjects",
    "onCommand:todoex.openTicketPreview",
    "onCommand:todoex.openExtraTicketEditor",
    "onCommand:todoex.createTicket",
    "onCommand:todoex.createTicketFromList",
    "onCommand:todoex.addCommentFromComments",
    "onCommand:todoex.editComment",
    "onCommand:todoex.addComment"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoexActivity",
          "title": "TodoEx",
          "icon": "media/todoex-activitybar.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "todoex.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "todoex.refreshProjects",
        "title": "Redmine: Refresh Projects"
      },
      {
        "command": "todoex.refreshTickets",
        "title": "Redmine: Refresh Tickets"
      },
      {
        "command": "todoex.selectProject",
        "title": "Redmine: Select Project"
      },
      {
        "command": "todoex.toggleChildProjects",
        "title": "Redmine: Toggle Child Projects"
      },
      {
        "command": "todoex.openTicketPreview",
        "title": "Redmine: Open Ticket Preview"
      },
      {
        "command": "todoex.openExtraTicketEditor",
        "title": "Redmine: Open Ticket Editor (New)"
      },
      {
        "command": "todoex.createTicket",
        "title": "Redmine: Create Ticket from Editor"
      },
      {
        "command": "todoex.createTicketFromList",
        "title": "Redmine: New Ticket"
      },
      {
        "command": "todoex.editComment",
        "title": "Redmine: Edit Comment"
      },
      {
        "command": "todoex.addComment",
        "title": "Redmine: Add Comment"
      },
      {
        "command": "todoex.addCommentFromComments",
        "title": "Redmine: Add Comment"
      }
    ],
    "views": {
      "todoexActivity": [
        {
          "id": "todoexActivityProjects",
          "name": "Redmine Projects"
        },
        {
          "id": "todoexActivityTickets",
          "name": "Redmine Tickets"
        },
        {
          "id": "todoexActivityComments",
          "name": "Redmine Comments"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "todoex.createTicketFromList",
          "when": "view == todoexActivityTickets",
          "group": "navigation",
          "icon": "$(add)",
          "enablement": "todoex.canCreateTickets"
        },
        {
          "command": "todoex.addCommentFromComments",
          "when": "view == todoexActivityComments",
          "group": "navigation",
          "icon": "$(add)",
          "enablement": "todoex.canAddComments"
        }
      ],
      "view/item/context": [
        {
          "command": "todoex.openTicketPreview",
          "when": "view == todoexTickets && viewItem == redmineTicket",
          "group": "navigation"
        },
        {
          "command": "todoex.openExtraTicketEditor",
          "when": "view == todoexTickets && viewItem == redmineTicket",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "TodoEx",
      "properties": {
        "todoex.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Base URL of the Redmine instance."
        },
        "todoex.apiKey": {
          "type": "string",
          "default": "",
          "description": "Redmine API key for authentication."
        },
        "todoex.defaultProjectId": {
          "type": "string",
          "default": "",
          "description": "Default project identifier or ID used in ticket listing."
        },
        "todoex.selectedProjectId": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "description": "Last selected project ID (used for restoring selection)."
        },
        "todoex.selectedProjectName": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "description": "Last selected project name (used for restoring selection)."
        },
        "todoex.includeChildProjects": {
          "type": "boolean",
          "default": false,
          "description": "Include child projects when listing tickets."
        },
        "todoex.ticketListLimit": {
          "type": "number",
          "default": 50,
          "description": "Default number of tickets to load per request."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unsafe": "bash ./scripts/vscode-test-nosandbox.sh"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
