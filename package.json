{
  "name": "todoex",
  "displayName": "Redmine Client",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:todoexActivityTicketSettings",
    "onView:todoexActivityProjects",
    "onView:todoexActivityTickets",
    "onView:todoexActivityComments",
    "onCommand:todoex.refreshTickets",
    "onCommand:todoex.refreshProjects",
    "onCommand:todoex.collapseAllProjects",
    "onCommand:todoex.collapseAllTickets",
    "onCommand:todoex.selectProject",
    "onCommand:todoex.toggleChildProjects",
    "onCommand:todoex.openTicketPreview",
    "onCommand:todoex.openExtraTicketEditor",
    "onCommand:todoex.reloadTicket",
    "onCommand:todoex.reloadComment",
    "onCommand:todoex.configureTicketPriorityFilter",
    "onCommand:todoex.configureTicketStatusFilter",
    "onCommand:todoex.configureTicketTrackerFilter",
    "onCommand:todoex.configureTicketAssigneeFilter",
    "onCommand:todoex.configureTicketSort",
    "onCommand:todoex.configureTicketDueDateDisplay",
    "onCommand:todoex.resetTicketListSettings",
    "onCommand:todoex.configureEditorDefaultSubject",
    "onCommand:todoex.configureEditorDefaultDescription",
    "onCommand:todoex.configureEditorDefaultTracker",
    "onCommand:todoex.configureEditorDefaultPriority",
    "onCommand:todoex.configureEditorDefaultStatus",
    "onCommand:todoex.configureEditorDefaultDueDate",
    "onCommand:todoex.resetEditorDefaults",
    "onCommand:todoex.createTicket",
    "onCommand:todoex.createTicketFromList",
    "onCommand:todoex.createChildTicketFromList",
    "onCommand:todoex.addCommentFromComments",
    "onCommand:todoex.editComment",
    "onCommand:todoex.addComment"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoexActivity",
          "title": "Redmine Client",
          "icon": "media/todoex-activitybar.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "todoex.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "todoex.refreshProjects",
        "title": "Redmine: Refresh Projects"
      },
      {
        "command": "todoex.refreshTickets",
        "title": "Redmine: Refresh Tickets"
      },
      {
        "command": "todoex.collapseAllProjects",
        "title": "Redmine: Collapse All Projects",
        "icon": "$(collapse-all)"
      },
      {
        "command": "todoex.collapseAllTickets",
        "title": "Redmine: Collapse All Tickets",
        "icon": "$(collapse-all)"
      },
      {
        "command": "todoex.reloadTicket",
        "title": "Redmine: Reload Ticket",
        "icon": "$(refresh)"
      },
      {
        "command": "todoex.reloadComment",
        "title": "Redmine: Reload Comment",
        "icon": "$(refresh)"
      },
      {
        "command": "todoex.selectProject",
        "title": "Redmine: Select Project"
      },
      {
        "command": "todoex.toggleChildProjects",
        "title": "Redmine: Toggle Child Projects"
      },
      {
        "command": "todoex.openTicketPreview",
        "title": "Redmine: Open Ticket Preview"
      },
      {
        "command": "todoex.openExtraTicketEditor",
        "title": "Redmine: Open Ticket Editor (New)"
      },
      {
        "command": "todoex.configureTicketPriorityFilter",
        "title": "Redmine: Configure Ticket Priority Filter"
      },
      {
        "command": "todoex.configureTicketStatusFilter",
        "title": "Redmine: Configure Ticket Status Filter"
      },
      {
        "command": "todoex.configureTicketTrackerFilter",
        "title": "Redmine: Configure Ticket Tracker Filter"
      },
      {
        "command": "todoex.configureTicketAssigneeFilter",
        "title": "Redmine: Configure Ticket Assignee Filter"
      },
      {
        "command": "todoex.configureTicketSort",
        "title": "Redmine: Configure Ticket Sort"
      },
      {
        "command": "todoex.configureTicketDueDateDisplay",
        "title": "Redmine: Configure Ticket Due Date Display"
      },
      {
        "command": "todoex.resetTicketListSettings",
        "title": "Redmine: Reset Ticket Settings"
      },
      {
        "command": "todoex.configureEditorDefaultSubject",
        "title": "Redmine: Configure Editor Default Subject"
      },
      {
        "command": "todoex.configureEditorDefaultDescription",
        "title": "Redmine: Configure Editor Default Description"
      },
      {
        "command": "todoex.configureEditorDefaultTracker",
        "title": "Redmine: Configure Editor Default Tracker"
      },
      {
        "command": "todoex.configureEditorDefaultPriority",
        "title": "Redmine: Configure Editor Default Priority"
      },
      {
        "command": "todoex.configureEditorDefaultStatus",
        "title": "Redmine: Configure Editor Default Status"
      },
      {
        "command": "todoex.configureEditorDefaultDueDate",
        "title": "Redmine: Configure Editor Default Due Date"
      },
      {
        "command": "todoex.resetEditorDefaults",
        "title": "Redmine: Reset Editor Defaults"
      },
      {
        "command": "todoex.createTicket",
        "title": "Redmine: Create Ticket from Editor"
      },
      {
        "command": "todoex.createTicketFromList",
        "title": "Redmine: New Ticket",
        "icon": "$(add)"
      },
      {
        "command": "todoex.createChildTicketFromList",
        "title": "Redmine: Add Child Ticket",
        "icon": "$(add)"
      },
      {
        "command": "todoex.openProjectInBrowser",
        "title": "Redmine: Open Project in Browser",
        "icon": "$(link-external)"
      },
      {
        "command": "todoex.openTicketInBrowser",
        "title": "Redmine: Open Ticket in Browser",
        "icon": "$(link-external)"
      },
      {
        "command": "todoex.openCommentInBrowser",
        "title": "Redmine: Open Comment in Browser",
        "icon": "$(link-external)"
      },
      {
        "command": "todoex.editComment",
        "title": "Redmine: Edit Comment"
      },
      {
        "command": "todoex.addComment",
        "title": "Redmine: Add Comment"
      },
      {
        "command": "todoex.addCommentFromComments",
        "title": "Redmine: Add Comment",
        "icon": "$(add)"
      }
    ],
    "views": {
      "todoexActivity": [
        {
          "id": "todoexActivityTicketSettings",
          "name": "Ticket Settings"
        },
        {
          "id": "todoexActivityProjects",
          "name": "Projects"
        },
        {
          "id": "todoexActivityTickets",
          "name": "Tickets"
        },
        {
          "id": "todoexActivityComments",
          "name": "Comments"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "todoex.collapseAllProjects",
          "when": "view == todoexActivityProjects",
          "group": "navigation"
        },
        {
          "command": "todoex.createTicketFromList",
          "when": "view == todoexActivityTickets",
          "group": "navigation",
          "enablement": "todoex.canCreateTickets"
        },
        {
          "command": "todoex.reloadTicket",
          "when": "view == todoexActivityTickets",
          "group": "navigation@2"
        },
        {
          "command": "todoex.collapseAllTickets",
          "when": "view == todoexActivityTickets",
          "group": "navigation@3"
        },
        {
          "command": "todoex.addCommentFromComments",
          "when": "view == todoexActivityComments",
          "group": "navigation",
          "enablement": "todoex.canAddComments"
        },
        {
          "command": "todoex.reloadComment",
          "when": "view == todoexActivityComments",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "todoex.openTicketPreview",
          "when": "view == todoexTickets && viewItem == redmineTicket",
          "group": "navigation"
        },
        {
          "command": "todoex.openExtraTicketEditor",
          "when": "view == todoexTickets && viewItem == redmineTicket",
          "group": "navigation@1"
        },
        {
          "command": "todoex.createChildTicketFromList",
          "when": "view == todoexTickets && viewItem == redmineTicket && todoex.canCreateTickets",
          "group": "inline@1"
        },
        {
          "command": "todoex.createChildTicketFromList",
          "when": "view == todoexActivityTickets && viewItem == redmineTicket && todoex.canCreateTickets",
          "group": "inline@1"
        },
        {
          "command": "todoex.openProjectInBrowser",
          "when": "view == todoexActivityProjects && (viewItem == redmineProject || viewItem == redmineProjectSelected)",
          "group": "inline@1"
        },
        {
          "command": "todoex.openTicketInBrowser",
          "when": "view == todoexActivityTickets && viewItem == redmineTicket",
          "group": "inline@2"
        },
        {
          "command": "todoex.openCommentInBrowser",
          "when": "view == todoexActivityComments && (viewItem == redmineComment || viewItem == redmineCommentEditable)",
          "group": "inline@1"
        }
      ]
    },
    "configuration": {
      "title": "Redmine Client",
      "properties": {
        "todoex.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Base URL of the Redmine instance."
        },
        "todoex.apiKey": {
          "type": "string",
          "default": "",
          "description": "Redmine API key for authentication."
        },
        "todoex.defaultProjectId": {
          "type": "string",
          "default": "",
          "description": "Default project identifier or ID used in ticket listing."
        },
        "todoex.selectedProjectId": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "description": "Last selected project ID (used for restoring selection)."
        },
        "todoex.selectedProjectName": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "description": "Last selected project name (used for restoring selection)."
        },
        "todoex.includeChildProjects": {
          "type": "boolean",
          "default": false,
          "description": "Include child projects when listing tickets."
        },
        "todoex.ticketListLimit": {
          "type": "number",
          "default": 50,
          "description": "Default number of tickets to load per request."
        },
        "todoex.editorStorageDirectory": {
          "type": "string",
          "default": "",
          "description": "Absolute path to store ticket editor files. When empty, the default workspace location is used."
        },
        "todoex.newTicketTemplatePath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the new ticket editor template file."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unsafe": "bash ./scripts/vscode-test-nosandbox.sh"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
